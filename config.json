{
    "html": {
        "src": ["src/html/index.pug"],
        "outDir": "docs",
        "minify": true
    },
    "css": {
        "src": ["src/css/main.css"],
        "outDir": "docs/css",
        "minify": true,
        "plugins": ["postcss-import", "precss", "autoprefixer"]
    },
    "js": {
        "src": ["src/js/main.ts", "src/js/worker.ts"],
        "outDir": "docs/js",
        "minify": true
    }
}