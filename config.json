{
    "html": {
        "src": ["src/html/index.pug", "src/html/default.pug"],
        "outDir": "build/html",
        "minify": false
    },
    "css": {
        "src": ["src/css/main.css"],
        "outDir": "build/css",
        "minify": true,
        "plugins": ["postcss-import", "precss", "autoprefixer"]
    },
    "js": {
        "src": ["src/js/main.ts", "src/js/worker.ts", "src/js/default.ts"],
        "outDir": "build/js",
        "minify": false
    }
}